<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Cake.Wallpaper.Manager.GUI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="200"
             x:Class="Cake.Wallpaper.Manager.GUI.Views.CheckboxListItemView">
    <Design.DataContext>
        <viewModels:CheckboxListItemViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="auto auto">
        <Label VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0 0 2 0" Content="{Binding Label}" />
        <CheckBox HorizontalAlignment="Right" Grid.Column="1" IsChecked="{Binding Selected}" />
    </Grid>
</UserControl>